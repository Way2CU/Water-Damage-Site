<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>
			<section id="intro">
				<cms:module
					name="articles"
					action="show"
					text_id="intro"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>

				<div class="form_wrap">
					<h4><cms:text constant="title_form"/></h4>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>
			</section>

			<!-- Features section -->
			<section id="about">
				<cms:module
					name="articles"
					action="show"
					text_id="specialize"
					template="stock/article_generic.xml"
					>
					<param name="class" value=""/>
				</cms:module>
				<cms:module
					name="articles"
					action="show"
					text_id="about"
					template="stock/article_generic.xml"
					>
					<param name="class" value=""/>
				</cms:module>
				<ul id="features">
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="parts/features.xml"
						/>
				</ul>
			</section>

			<section class="articles">
				<cms:module
					name="articles"
					action="show"
					text_id="water"
					group="waterdamage_articles"
					template="parts/article.xml"
					>
					<param name="background_image" value=""/>
				</cms:module>

				<cms:module
					name="articles"
					action="show"
					text_id="commercial"
					group="waterdamage_articles"
					template="parts/article.xml"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="contents"
					group="waterdamage_articles"
					template="parts/article.xml"
					>
					<param name="background_image" value=""/>
				</cms:module>

				<cms:module
					name="articles"
					action="show"
					text_id="fire"
					group="waterdamage_articles"
					template="parts/article.xml"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="sprinklers"
					group="waterdamage_articles"
					template="parts/article.xml"
					>
					<param name="background_image" value=""/>
				</cms:module>

				<cms:module
					name="articles"
					action="show"
					text_id="mold"
					group="waterdamage_articles"
					template="parts/article.xml"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="repair"
					group="waterdamage_articles"
					template="parts/article.xml"
					>
					<param name="background_image" value=""/>
				</cms:module>

				<cms:module
					name="articles"
					action="show"
					text_id="storm"
					group="waterdamage_articles"
					template="parts/article.xml"
					/>
			</section>

			<footer>
				<div class="top">
					<h2><cms:text constant="site_title"/></h2>
					<div class="form_wrap">
						<h4><cms:text constant="title_form"/></h4>
						<cms:module
							name="contact_form"
							action="show"
							text_id="contact"
							/>
						<p><cms:text constant="footer_note"/></p>
					</div>
				</div>
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value="1"/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>